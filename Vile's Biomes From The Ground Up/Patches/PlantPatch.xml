<?xml version="1.0" encoding="UTF-8"?>
<Patch>


	
	<!-- FERN -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Fern"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>0.4</min>
				<max>0.9</max>
			</visualSizeRange>
		</value>
    </Operation>		
	 
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Fern"]/plant/maxMeshCount</xpath>
		<value>
			<maxMeshCount>4</maxMeshCount>
		</value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Fern"]/plant/wildClusterWeight</xpath>
		<value>
			<wildClusterWeight>10</wildClusterWeight>
		</value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Fern"]/plant/wildClusterRadius</xpath>
		<value>
			<wildClusterRadius>5</wildClusterRadius>
		</value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Fern"]/graphicData/texPath</xpath> 
		<value>
			<texPath>Things/Plant/PlantFernNew</texPath>
		</value>
    </Operation>
	
	
	<!-- MOSS -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Moss"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Plant/PlantMoss</texPath>
		</value>
    </Operation>
		<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Plant_Moss"]/plant</xpath>
		<value>
			<wildClusterWeight>40</wildClusterWeight>
		</value>
    </Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Plant_Moss"]/plant</xpath>
		<value>
			<wildClusterRadius>30</wildClusterRadius>
		</value>
    </Operation>
	
	
	<!-- APPLE TREE -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TreeApple"]/graphicData</xpath>
		<value>
			<graphicData>
				<texPath>Things/Trees/TreeApple/PlantAppleTree</texPath>
				<graphicClass>Graphic_Random</graphicClass>
			</graphicData>
		</value>
    </Operation>
	
		<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TreeApple"]/plant/leaflessGraphicPath</xpath>
		<value>
			<leaflessGraphicPath>Things/Trees/TreeApple/PlantAppleTree_Leafless</leaflessGraphicPath>
		</value>
    </Operation>
	
	<!-- PEACH TREE -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TreePeach"]/graphicData</xpath>
		<value>
			<graphicData>
				<texPath>Things/Trees/TreePeach/PlantPeachTree</texPath>
				<graphicClass>Graphic_Random</graphicClass>
			</graphicData>
		</value>
    </Operation>
	
		<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TreePeach"]/plant/leaflessGraphicPath</xpath>
		<value>
			<leaflessGraphicPath>Things/Trees/TreePeach/PlantPeachTree_Leafless</leaflessGraphicPath>
		</value>
    </Operation>
	
	
	<!-- BUSH -->
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Bush"]/plant/maxMeshCount</xpath>
		<value>
			<maxMeshCount>4</maxMeshCount>
		</value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Bush"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Plant/PlantShrubChokeberry</texPath>
		</value>
    </Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Bush"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>0.7</min>
				<max>1.0</max>
			</visualSizeRange>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Bush"]/plant/leaflessGraphicPath</xpath>
		<value>
			<leaflessGraphicPath>Things/Plant/PlantShrubChokeberry_Leafless</leaflessGraphicPath>
		</value>
    </Operation>
	
	
	
	<!-- RHODODENDRON -->
		<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Rhododendron"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>0.7</min>
				<max>1.0</max>
			</visualSizeRange>
		</value>
    </Operation>
	
	<!-- BERRY BUSH -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Berry"]/plant/maxMeshCount</xpath>
		<value>
			<maxMeshCount>4</maxMeshCount>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Strawberry"]/plant/maxMeshCount</xpath>
		<value>
			<maxMeshCount>4</maxMeshCount>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Berry"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>0.8</min>
				<max>1.7</max>
			</visualSizeRange>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Strawberry"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>1.1</min>
				<max>1.3</max>
			</visualSizeRange>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Berry"]/label</xpath>
		<value>
			<label>Wild Strazberry</label>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Strawberry"]/label</xpath>
		<value>
			<label>Strazberry</label>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Berry"]/description</xpath>
		<value>
			<description>Someone had the grand idea to splice the genes of a strawberry with a raspberry, so you can get the full enjoyment of picking strawberries while getting scratches from raspberry thorns.</description>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Berry" or defName="Plant_Strawberry"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Plant/PlantStrazberry_Harvest</texPath>
		</value>
    </Operation>
	<Operation Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
            <li Class="PatchOperationTest">
                <xpath>Defs/ThingDef[defName = "Plant_Berry" or defName="Plant_Strawberry"]/plant/immatureGraphicPath</xpath>
                <success>Normal</success>
            </li>
            <li Class="PatchOperationRemove">
                <xpath>Defs/ThingDef[defName = "Plant_Berry" or defName="Plant_Strawberry]/plant/immatureGraphicPath</xpath>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName = "Plant_Berry" or defName="Plant_Strawberry]/plant</xpath>
                <value>
                    <immatureGraphicPath>Things/Plant/PlantStrazberry</immatureGraphicPath>
                </value>
            </li>
        </operations>
    </Operation>
	<Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="Plant_Berry" or defName="Plant_Strawberry"]/plant/leaflessGraphicPath</xpath>
        <value>
			<leaflessGraphicPath>Things/Plant/PlantStrazberry_Leafless</leaflessGraphicPath>
        </value>
    </Operation>




	
	<!-- ALOCASIA <-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_Alocasia"]/graphicData/drawSize</xpath>
		<value>
			<drawSize>1.0</drawSize> <!-- smaller so it looks crisper -->
		</value>
    </Operation>
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="Plant_Alocasia"]/plant/leaflessGraphicPath</xpath> <!-- TROPICAL ONLY -->
    </Operation>


	
	<!-- LOW SHRUBS -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Plant_ShrubLow"]/graphicData</xpath>
		<value>
			<shaderParameters Inherit="False">
				<_FallColorSource>(0.3803, 0.4352, 0.1451)</_FallColorSource>
				<_FallColorDestination>/Other/TreeFallGradient</_FallColorDestination>
				<_FallTransitionRange>(0.02, 0.10)</_FallTransitionRange>
				<_FallBehaviorEnabled>0</_FallBehaviorEnabled>
			</shaderParameters>
		</value>
    </Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_ShrubLow"]/plant/maxMeshCount</xpath>
		<value>
			<maxMeshCount>4</maxMeshCount>
		</value>
    </Operation>
	
	

